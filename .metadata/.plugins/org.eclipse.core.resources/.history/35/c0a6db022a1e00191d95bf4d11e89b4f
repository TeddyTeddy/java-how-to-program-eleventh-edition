public class SquareOfAsterisks {
	public static void main(String[] args) {
	
	}
	
	private static void squareOfAsterisks(int size) {
		System.out.printf("Square of size %d", size);
		for(int i = size; i >= 1; --i) {
			for(int j = size; j >= 1; --j) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}